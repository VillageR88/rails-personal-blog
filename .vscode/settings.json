{
    "files.associations": {
        "*.html.erb": "erb"
    },
    "[erb]": {
        "editor.defaultFormatter": "aliariff.vscode-erb-beautify",
        "editor.formatOnSave": true
    },
    "vscode-erb-beautify.ignoreFormatFilePatterns": [
        "**/email_templates/**/*.erb"
    ],
    "cSpell.words": [
        "gsub",
        "importmap",
        "larr",
        "linecap",
        "linejoin",
        "onclick",
        "Paulina",
        "rgba",
        "strftime",
        "stylesheet",
        "Westover"
    ]
}