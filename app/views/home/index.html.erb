  
<div class="divide-y-[1px] divide-[#EFEDEB] flex flex-col divide-solid px-[10px]">
  <section class="py-[48px] flex flex-col gap-[24px]">
    <h1 class="decor-underline w-[241px]">Hi, I'm Paulina <span class="absolute top-[-3px]">ðŸ‘‹</span></h1>
    <p class="whitespace-pre-wrap p-normal"><%= "I'm on a journey to become a front-end web developer..." %></p>
    <%= render 'shared/social_links' %>
  </section>
  <section class="py-[48px] flex flex-col gap-[32px]">
    <h2 class="h1 decor-underline-2 bg-[7em_1em] w-full">Latest Articles</h2>
    <div id="article-container" class="flex flex-col gap-[24px] [transition:height_300ms] h-[450px] overflow-y-clip">
      <% 
        articles = JSON.parse(File.read(Rails.root.join('db', 'data.json')))
        articles.each_with_index do |article, index| 
      %>
      <section class="flex flex-col w-fit gap-[8px] article-item <%= index >= 5 ? 'hidden' : '' %>">
        <a class="[&>h3]:text-[rgb(52,48,45,1)] [&:hover>h3]:text-[rgb(52,48,45,0.7)] [&:hover>h3]:underline [&:hover>h3]:decoration-[rgb(52,48,45,0.5)]" href="<%= article['slug'] %>">
          <h3 class="color-unset [transition:300ms] decoration-[rgb(52,48,45,0)]"><%= article['title'] %></h3>
        </a>
        <p class="p-italic"><%= article['publishedAt'].to_date.strftime('%B %-d, %Y') %></p>
      </section>
    <% end %>
    <% if articles.length > 5 %>
      <button 
          id="view-all-button"
          onclick="toggleArticles()"
          class="decor-underline-3 w-fit cursor-pointer hover:text-[rgba(52,48,45,0.7)] text-[rgba(52,48,45,1)] text-[18px] font-[500] [transition:color_300ms] leading-[150%] tracking-[-0.5px]">
        View all articles
      </button>
    <% end %>
  </section>
</div>
<% content_for :scripts do %>
  <%= javascript_include_tag 'articles.js' %>
<% end %>